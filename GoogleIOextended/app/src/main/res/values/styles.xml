<resources>

    <style name="Theme.GdgExtended" parent="Base.Theme.GdgExtended">
    </style>

    <style name="Base.Theme.GdgExtended" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="Theme.Toolbar" parent="Base.Theme.GdgExtended">
        <item name="android:textColorPrimary">@color/primary_text_toolbar</item>

        <item name="android:textColorSecondary">@color/primary_text_toolbar</item>
    </style>

    <style name="dialog_action_button_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">@dimen/dialog_min_padding</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="button_base" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/view_selector</item>
        <item name="android:minWidth">@dimen/min_width_flat_button</item>
        <item name="android:layout_marginTop">@dimen/dialog_top_down_margin_button</item>
        <item name="android:layout_marginBottom">@dimen/dialog_top_down_margin_button</item>
        <item name="android:layout_marginLeft">@dimen/dialog_left_right_margin_button</item>
        <item name="android:layout_marginRight">@dimen/dialog_left_right_margin_button</item>
        <item name="android:paddingLeft">@dimen/dialog_min_padding</item>
        <item name="android:paddingRight">@dimen/dialog_min_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dialog_button_height</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>

</resources>
