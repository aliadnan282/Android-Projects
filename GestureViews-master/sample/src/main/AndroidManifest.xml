<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alexvasilkov.gestures.sample">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:name=".SampleApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="GestureViews"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.MainActivity"
            android:label="Gesture Views">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ImageViewSampleActivity"
            android:label="ImageView"
            android:theme="@style/AppTheme.Full.NoTitle.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.FrameLayoutSampleActivity"
            android:label="FrameLayout"
            android:theme="@style/AppTheme.FrameLayout">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.CustomViewSampleActivity"
            android:label="Custom View">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ListTransitionActivity"
            android:label="List transitions">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.AdvancedDemoActivity"
            android:label="Advanced Demo"
            android:theme="@style/AppTheme.Full.NoTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.PhotoCropActivity"
            android:label="Rotate &amp; crop"
            android:theme="@style/AppTheme.Full.NoTitle.Dark" />

        <activity
            android:name=".activities.PhotoCropResultActivity"
            android:label="Cropped"
            android:theme="@style/AppTheme.Full.NoTitle.Dark" />

    </application>

</manifest>
