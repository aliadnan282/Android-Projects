<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/advancedPad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center" >
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" >
        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/transparent"
            style="?digit_button_style_adv" >
            <com.numix.calculator.view.ColorButton
                android:id="@+id/sin"
                android:text="@string/sin"
                style="?button_half_style" />
            <com.numix.calculator.view.ColorButton
                android:id="@+id/arcsin"
                android:text="@string/arcsin"
                style="?button_half_style" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/transparent"
            style="?digit_button_style_adv" >
            <com.numix.calculator.view.ColorButton
                android:id="@+id/cos"
                android:text="@string/cos"
                style="?button_half_style" />
            <com.numix.calculator.view.ColorButton
                android:id="@+id/arccos"
                android:text="@string/arccos"
                style="?button_half_style" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/transparent"
            style="?digit_button_style_adv" >
            <com.numix.calculator.view.ColorButton
                android:id="@+id/tan"
                android:text="@string/tan"
                style="?button_half_style" />
            <com.numix.calculator.view.ColorButton
                android:id="@+id/arctan"
                android:text="@string/arctan"
                style="?button_half_style" />
        </LinearLayout>
        <com.numix.calculator.view.ColorButton
            android:id="@+id/i"
            android:text="@string/i"
            style="?digit_button_style_adv" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#7e57c2">
        <com.numix.calculator.view.ColorButton
            android:id="@+id/ln"
            android:text="@string/ln"
            style="?digit_button_style_adv" />
        <com.numix.calculator.view.ColorButton
            android:id="@+id/lg"
            android:text="@string/lg"
            style="?digit_button_style_adv" />
        <com.numix.calculator.view.ColorButton
            android:id="@+id/pi"
            android:text="@string/pi"
            style="?digit_button_style_adv" />
        <com.numix.calculator.view.ColorButton
            android:id="@+id/e"
            android:text="@string/e"
            style="?digit_button_style_adv" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" >
        <com.numix.calculator.view.ColorButton
            android:id="@+id/percentage"
            android:text="@string/percentage"
            style="?digit_button_style_adv" />
        <com.numix.calculator.view.ColorButton
            android:id="@+id/factorial"
            android:text="@string/factorial"
            style="?digit_button_style_adv" />
        <com.numix.calculator.view.ColorButton
            android:id="@+id/sqrt"
            android:text="@string/sqrt"
            style="?digit_button_style_adv" />
        <com.numix.calculator.view.ColorButton
            android:id="@+id/power"
            android:text="@string/power"
            style="?digit_button_style_adv" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" >
        <com.numix.calculator.view.ColorButton
            android:id="@+id/leftParen"
            android:text="@string/leftParen"
            style="?digit_button_style_adv" />
        <com.numix.calculator.view.ColorButton
            android:id="@+id/rightParen"
            android:text="@string/rightParen"
            style="?digit_button_style_adv" />
        <com.numix.calculator.view.ColorButton
            android:id="@+id/X"
            android:text="@string/X"
            style="?digit_button_style_adv" />
        <com.numix.calculator.view.ColorButton
            android:id="@+id/Y"
            android:text="@string/Y"
            style="?digit_button_style_adv" />
    </LinearLayout>
</LinearLayout>
